<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ListaActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewLA">

        <Button
            android:id="@+id/buttonLAnovalista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOVA LISTA DE COMPRAS" />

        <Button
            android:id="@+id/button2LAcompartilhalista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMPARTILHAR LISTA" />

        <Button
            android:id="@+id/button3LAsair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bt_sair" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>